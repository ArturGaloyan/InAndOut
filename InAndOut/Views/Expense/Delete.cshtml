
@model InAndOut.Models.Expense

<form method="post" asp-action="DeletePost">
    <input asp-for="Id" hidden /> <!--from View to ExpenseController.cs sending (id) -->
    <div class="border p-3">
        @*<div asp-validation-summary="All" class="text-danger"></div>*@
        @*<div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Delete Expense</h2>
        </div>
        <div class="row">
            <div class="col-12">

                <div class="form-group row">
                    <div class="col-6">
                        <label asp-for="ExpenseName"></label> <!-- ITEMNAME from Models Expense properti name-->
                    </div>
                    <div class="col-6">
                        <label asp-for="Amount"></label> <!-- BORROWER from Models Expense properti name-->
                    </div>

                </div>

                <div class="form-group row">
                    <div class="col-6">
                        <input asp-for="ExpenseName" disabled class="form-control" /> <!--TEXTBOX HERE-->
                    </div>
                    <div class="col-6">
                        <input asp-for="Amount" disabled class="form-control" /> <!--TEXTBOX HERE-->
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-8 offset-2 row">
                        <div class="col">
                            <input type="submit" class="btn btn-danger w-75" value="Delete" /> <!--DELETE BUTTON-->
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-75">Back</a> <!--GO BACK BUTTON-->
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</form>

@section scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
